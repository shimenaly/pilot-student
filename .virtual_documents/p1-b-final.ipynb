# 请在这里输入代码
import time
class Bot:
    wait = 1
    def __init__(self):
        self.q = ''
        self.a = ''
    def _think(self, s):
        return s
    def run(self):
        time.sleep(Bot.wait)
        print(self.q)
        self.a = input()
        time.sleep(Bot.wait)
        print(self._think(self.a))





# 请在这里输入代码
class HelloBot(Bot):
    def __init__(self):
        self.q = "Hi, what is your name?"
    def _think(self,s):
        return f"Hello{s}"


# 请在这里输入代码
class GreetingBot(Bot):
    def __init__(self):
        self.q = "How are you today?"
    def _think(self,s):
        if 'good' in s.lower() or 'fine' in s.lower():
            return "I'm feeling good too"
        else:
            return "Sorry to hear that"


